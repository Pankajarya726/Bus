<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#ece2e2"
    tools:context=".Activity.PassengerDetail">
<android.support.v7.widget.CardView
    android:id="@+id/cardView1"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    android:background="@drawable/cardview_theme">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"

            >

            <TextView
                android:layout_marginLeft="3dp"
                android:gravity="center_vertical"
                android:text="Select bording point"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Spinner
                android:layout_weight="3"
                android:id="@+id/boarding_point"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_marginLeft="3dp"
                android:text="Selcet drop point"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Spinner
                android:layout_weight="3"
                android:id="@+id/droping_"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_below="@+id/cardView1"
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:background="@drawable/cardview_theme">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_marginLeft="3dp"
                    android:gravity="center_vertical"
                    android:text="Name"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/passenger_name"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:gravity="center_vertical"
                    android:text="Mobile No."
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/passenger_mobile"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:gravity="center_vertical"
                    android:text="Age"
                    android:layout_weight="1"
                    android:layout_marginLeft="3dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/passenger_age"
                    android:layout_weight="3"
                    android:layout_marginLeft="3dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_below="@+id/cardView2"
        android:id="@+id/tv_amount"
        android:gravity="center_vertical"
        android:text="Amount to Pay"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/textview_theme"/>


<Button
    android:id="@+id/submit"
    android:text="Next"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />

</RelativeLayout>